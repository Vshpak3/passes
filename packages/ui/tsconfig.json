{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": ".",
    "strictNullChecks": true,
    "incremental": true,
    "baseUrl": ".",
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.js",
    "tailwind.config.js",
    "sentry.client.config.ts",
    "lint-staged.config.js"
  ],
  "exclude": []
}
